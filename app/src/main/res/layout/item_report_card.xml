<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nama dan Max Budget -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBudgetName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Budget"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvBudgetMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="IDR 3.000.000"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Terpakai -->
        <TextView
            android:id="@+id/tvBudgetUsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDR 1.000.000"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:max="100"
            android:progress="70"
            android:progressDrawable="@drawable/progress_bar"
            android:progressTint="#2196F3" />

        <!-- Sisa -->
        <TextView
            android:id="@+id/tvBudgetLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sisa Budget: IDR 2.000.000"
            android:textSize="12sp"
            android:paddingTop="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
